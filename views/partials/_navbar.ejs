<section class='nav-wrapper'>
  <article>
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="quickadoo_logo">
      </a>
    </nav>
  </article>
  <% if(locals.formData){ %>
    <article class='alert alert-success nav-alert-wrapper' role='alert'>
      <h4>Success! Invite your friends via...</h4>
      <div class="input-group col-xl-5 col-lg-6 col-md-8 col-sm-11 col-12">
        <span class="input-group-addon">
          <i class="material-icons">file_copy</i>
        </span>
        <input type="text" readonly class="form-control ip-address-form"  value='' />
      </div>
    </article>
    <span class="alert alert-danger" role="alert">
      <%= `Admin URL:` %> <span class="ip-address"></span><%= `:8080/events/${formData[0].admin_url}` %>
    </span>
    <script>
        window.onload = function() {
          $('.ip-address').html(window.location.hostname);
          $('.ip-address-form').val( 'http://' + window.location.hostname + '<%= `:8080/events/${formData[0].poll_url}` %>');
        }
    </script>

    <% } %>
    
</section>
<form class='col-6'>
  <!-- event -->
  <div class='event'>
    <!-- event title -->
    <div class="form-group">
      <div class="input-group">
        <span class='left-icon'>
          <i class="material-icons">title</i>
        </span>
        <input type="text" name='event-title' class="form-control" placeholder="Enter title (i.e. What movie to watch?)">
      </div>
    </div>

    <!-- title description -->
    <div class="form-group">
      <div class="input-group">
        <span class='left-icon'>
          <i class="material-icons">subject</i>
        </span>
        <textarea name='event-description' class="form-control" placeholder="Add description"></textarea>
      </div>
    </div>
  </div>
  <!-- event end -->
  <hr>
  <!-- option -->
  <div class='option'>
    <!-- option name -->
    <div class="form-group">
      <div class="input-group">
        <span class='left-icon'>
          <p>1</p>
        </span>
        <input type="text" name='option_name1' class="form-control options col-6" placeholder="Option name">
        <span class='right-icon'>
          <i class="material-icons">file_copy</i>
          <i class="material-icons">delete</i>
        </span>
      </div>
    </div>

    <!-- option time -->
    <div class="form-group">
      <div class="input-group">
        <span class='left-icon'>
          <i class="material-icons">access_time</i>
        </span>
        <input type="text" name='start_time1' class="form-control col-6" placeholder="Start time">
        <input type="text" name='end_time1' class="form-control col-6" placeholder="End time">
      </div>
    </div>

    <!-- option note -->
    <div class="form-group">
      <div class="input-group">
        <span class='left-icon'>
          <i class="material-icons">create</i>
        </span>
        <textarea name='option-note' class="form-control" placeholder="Add notes"></textarea>
      </div>
    </div>
  </div>
  <!-- option end -->
</form>
<form id='event-form' class='needs-validation col-xl-8 col-lg-8 col-md-10 col-sm-12' novalidate>
  <!-- user info -->
  <div class='user'>
    <!-- name -->
    <div class="form-group">
      <div class="input-group">
        <i class="material-icons left-icon">person_outline</i>
        <input type="text" name='first_name' class="form-control col-3" placeholder="First name" required>
        <input type="text" name='last_name' class="form-control col-3" placeholder="Last name" required>
        <div class='invalid-feedback'>
          Please provide your first and last names.
        </div>
      </div>
    </div>
  </div>
  <!-- email -->
  <div class="form-group">
    <div class="input-group">
      <i class="material-icons left-icon">alternate_email</i>
      <input type="email" name='email' class="form-control col-5" placeholder="Email" required>
      <div class='invalid-feedback'>
        Please provide a valid email.
      </div>
    </div>
  </div>
  <!-- user info end -->
  <hr>
  <!-- event -->
  <div class='event'>
    <!-- event title -->
    <div class="form-group">
      <div class="input-group">
        <i class="material-icons left-icon">title</i>
        <input type="text" name='title' class="form-control" placeholder="Enter title (i.e. What movie to watch?)" required>
        <div class='invalid-feedback'>
          Please provide an event title.
        </div>
      </div>
    </div>
    <!-- title description -->
    <div class="form-group">
      <div class="input-group">
        <i class="material-icons left-icon">subject</i>
        <textarea name='description' class="form-control" placeholder="Add description"></textarea>
      </div>
    </div>
  </div>
  <!-- event end -->
  <hr>
  <!-- option -->
  <div class='option-1'>
    <!-- option name -->
    <div class="form-group">
      <div class="input-group">
        <p class='left-icon'></p>
        <input type="text" name='name' class="form-control options col-6" placeholder="Option name" required>
        <span class='right-icon col-6'>
          <i class="material-icons">file_copy</i>
          <i class="material-icons">delete</i>
          <input type="checkbox">
          <i class="fas fa-thumbs-up"></i>
          <p id="counter">0 Votes</p>
        </span>
        <div class='invalid-feedback'>
            Please name your option.
        </div>
      </div>
    </div>
      <!-- option time -->
      <div class="form-group">
        <div class="input-group">
          <i class="material-icons left-icon">access_time</i>
          <input type="text" name='start_time' class="form-control col-6" placeholder="Start time">
          <input type="text" name='end_time' class="form-control col-6" placeholder="End time">
        </div>
      </div>
      <!-- option note -->
      <div class="form-group">
        <div class="input-group">
          <i class="material-icons left-icon">create</i>
          <textarea name='note' class="form-control" placeholder="Add notes"></textarea>
        </div>
      </div>
    </div>
  </div>
  <!-- option end -->
  <input type="submit" class="btn btn-primary" value='PREVIEW'>
  <br></br>
  <input type="submit" class="btn btn-primary" value='SUBMIT'>
</form>